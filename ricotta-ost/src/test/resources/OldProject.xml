<?xml version="1.0" encoding="UTF-8"?>
<ricotta>
   <languages>
      <language code="en" name="English" />
      <language code="en_GB" name="British English" />
      <language code="sv" name="Swedish" />
   </languages>
   <templates>
      <template name="strings_android_inherit" description="Android strings.xml with parent default translations"><![CDATA[<?xml version="1.0" encoding="utf-8"?>
<!-- Project: ${project.name} -->
<!-- Language: ${language.name} (${language.code}) -->
<!-- Template name: ${mall.name} -->
<!-- Artifact name: ${artifact.name} -->

<resources>
#foreach( $t in $translations )#if( $t.local )
        <string name="${t.token.name}">${encoder.android($t.local.local)}</string>
#elseif( $t.parent )
        <string name="${t.token.name}">${encoder.android($t.parent.local)}</string>
#end#end
</resources>]]></template>
   </templates>
   <projects>
      <project name="ricotta" owner="s.o.sandstrom@gmail.com">
         <users>
            <user email="test@example.com" />
         </users>
         <branches>
            <branch name="trunk" description="the trunk">
               <languages>
                  <language code="en" />
                  <language code="en_GB" default="en" />
                  <language code="sv" default="en" />
               </languages>
               <contexts>
               </contexts>
               <tokens>
                  <token id="14" name="Project" description="The Project Entity" >
                     <translation code="en_GB"><![CDATA[Project]]></translation> 
                     <translation code="sv"><![CDATA[Projekt]]></translation> 
                  </token>
                  <token id="13" name="appTitle" description="The Application title as displayed to the user" >
                     <translation code="en"><![CDATA[Ricotta]]></translation> 
                  </token>
               </tokens>
               <subsets>
                  <subset name="ricotta-ost" description="${s.description}">
                     <token id="13" />
                     <token id="14" />
                  </subset> 
                  <subset name="ricotta-maven-plugin" description="${s.description}">
                     <token id="13" />
                  </subset> 
               </subsets>
            </branch>
         </branches>
      </project>
    </projects>
</ricotta>